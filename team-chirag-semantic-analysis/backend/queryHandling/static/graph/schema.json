{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Concept Graph Schema",
  "type": "object",
  "required": ["concepts"],
  "properties": {
    "concepts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/concept"
      }
    }
  },
  "definitions": {
    "concept": {
      "type": "object",
      "required": ["id", "name", "type", "level", "description", "keywords", "prerequisites", "topic_suggestions", "resources"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^t\\d+(_s\\d+)*(_ss\\d+)*$",
          "description": "Unique identifier following the pattern t{number} for topics, t{number}_s{number} for subtopics"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable name of the concept"
        },
        "type": {
          "type": "string",
          "enum": ["topic", "subtopic"],
          "description": "Type of concept"
        },
        "level": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced"],
          "description": "Difficulty level of the concept"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "description": "Detailed explanation of the concept"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "description": "Array of relevant keywords for search and categorization"
        },
        "prerequisites": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^t\\d+(_s\\d+)*(_ss\\d+)*$"
          },
          "description": "Array of concept IDs that should be learned before this concept"
        },
        "topic_suggestions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^t\\d+(_s\\d+)*(_ss\\d+)*$"
          },
          "description": "Array of concept IDs for related or next topics to explore"
        },
        "resources": {
          "$ref": "#/definitions/resources"
        },
        "subconcepts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/concept"
          },
          "description": "Array of subconcepts under this concept"
        }
      }
    },
    "resources": {
      "type": "object",
      "required": ["videos", "articles"],
      "properties": {
        "videos": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/resource_item"
          }
        },
        "articles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/resource_item"
          }
        }
      }
    },
    "resource_item": {
      "type": "object",
      "required": ["title", "url"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "description": "Title of the resource"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL of the resource"
        }
      }
    }
  }
}
